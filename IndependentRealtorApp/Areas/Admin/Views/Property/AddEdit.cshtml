@model IndependentRealtorApp.Models.DomainModels.Property
@{
    ViewBag.Title = "Admin Property (Add or Edit)";
}

<div class="bg-danger text-white text-center p-1">
    <h1 class="m-2 p-3">Admin Add/Edit New Property</h1>
</div>
<div class="p-3 mt-2 less-transparent-table">
    <form class="" asp-controller="Property" asp-action="Add" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="PropertyTitle" class="control-label"></label>
            <input asp-for="PropertyTitle" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyDescription" class="control-label"></label>
            <input asp-for="PropertyDescription" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyAddress" class="control-label"></label>
            <input asp-for="PropertyAddress" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyCity" class="control-label"></label>
            <input asp-for="PropertyCity" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyState" class="control-label"></label>
            <input asp-for="PropertyState" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyZip" class="control-label"></label>
            <input asp-for="PropertyZip" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyStatus" class="control-label"></label>
            <input asp-for="PropertyStatus" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PropertyPrice" class="control-label"></label>
            <input asp-for="PropertyPrice" class="form-control" />
        </div>

        <!-- TODO | FIX | OR FORGET | some sort of HttpPost async Task<IActionResult> in the controller and a modify model-->
        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>


        <!-- this hidden field should probably be more securely handled-->
        @* <input type="hidden" asp-for="RealtorId" value="1" /> *@
        <input type="hidden" asp-for="Id" />


        <button type="submit" class="btn btn-primary m-2">Submit</button>
        <a type="clear" asp-controller="Property" asp-action="Index" class="btn btn-outline-primary m-2">Cancel</a>
    </form>
</div>