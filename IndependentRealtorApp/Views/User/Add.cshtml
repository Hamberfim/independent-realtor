@model IndependentRealtorApp.Models.DomainModels.PublicUser
@{
    ViewData["Title"] = "Add New User";
}

<div class="text-center">
    <h1 class="m-2 p-3">Add New User</h1>
</div>
@if (ViewData.ModelState.IsValid)
{
    <div class="alert alert-success">User added successfully!</div>
}
<div class="p-3 mt-2 less-transparent-table">
    <form asp-controller="User" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">First Name:</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Last Name:</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserEmail" class="control-label">Email Address:</label>
            <input asp-for="UserEmail" class="form-control" />
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Add User</button>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}